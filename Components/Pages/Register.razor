@page "/register"
@using Excellentiam.DTOs
@using Excellentiam.Models
@using Excellentiam.Service.Interface
@inject NavigationManager Navigation
@inject IAutenticacionService AutenticacionService

<PageTitle>Registrarse</PageTitle>

<div class="d-flex justify-content-center mt-5">
    <div class="card shadow" style="width: 100%; max-width: 400px;">
        <div class="card-header text-center">
            <h4>Registrarse</h4>
        </div>
        <div class="card-body">
            <EditForm Model="usuario">
                <DataAnnotationsValidator />
                <div class="mb-3">
                    <label for="email">Nombre</label>
                    <InputText id="email"
                               class="form-control"
                               @bind-Value="usuario.Nombre"
                               placeholder="jhon doe" />
                    <ValidationMessage For="() => usuario.Nombre" />

                </div>
                <div class="mb-3">
                    <label for="email">Correo electrónico</label>
                    <InputText id="email"
                               class="form-control"
                               @bind-Value="usuario.Correo"
                               placeholder="tu@correo.com" />
                    <ValidationMessage For="() => usuario.Correo" />

                </div>
                <div class="mb-3">
                    <label for="password">Contraseña</label>
                    <input id="password"
                           class="form-control"
                           type="password"
                           @bind-value="usuario.Contraseña"
                           placeholder="••••••••" />
                    <ValidationMessage For="() => usuario.Contraseña" />
                </div>
                <div class="mb-3">
                    <label for="password">Confirmar Contraseña</label>
                    <input id="password"
                           class="form-control"
                           type="password"
                           @bind-value="usuario.ConfirmarContraseña"
                           placeholder="••••••••" />
                    <ValidationMessage For="() => usuario.ConfirmarContraseña" />
                </div>

                <div class="d-grid">
                    <button type="submit"
                            class="btn btn-primary"
                            @onclick="Registrar"
                            disabled="@_processing">
                        @(_processing ? "Registrando..." : "Registrar")
                    </button>
                </div>
            </EditForm>

            @if (!string.IsNullOrEmpty(ErrorMessage))
            {
                <div class="alert alert-danger p-2" role="alert">
                    @ErrorMessage
                </div>
            }

            <div class="mt-3 text-center">
                <p>
                    ¿Ya tienes cuenta?
                    <a href="/login" class="text-decoration-none">Inicia sesion aquí</a>
                </p>
            </div>
        </div>
    </div>
</div>

@code {
    private RegisterDTO usuario = new();
    private string? ErrorMessage;
    private bool _processing = false;


    private async Task Registrar()
    {
        if (_processing) return;

        _processing = true;
        ErrorMessage = null;
        StateHasChanged();

        try
        {
            var respusta = await AutenticacionService.RegisterAsync(usuario);
            if (respusta)
            {
                Navigation.NavigateTo("/login");
            }
            else
            {
                ErrorMessage = "Error al registrar la cuenta.";
            }

        }
        catch (Exception ex)
        {
            ErrorMessage = "Error de conexión. Inténtalo más tarde.";
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            _processing = false;
            StateHasChanged();
        }
    }
}